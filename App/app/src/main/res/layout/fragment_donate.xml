<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".ui.browse.BrowseFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/Card1"
        android:layout_width="299dp"
        android:layout_height="96dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="25dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="128dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@+id/ObjectBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29000002">

        <TextView
            android:id="@+id/Title1"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="What kind of\ndonation do you\nwant to make today?"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="26sp" />
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/ObjectBtn"
        android:layout_width="217dp"
        android:layout_height="55dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/objectsbtn"
        android:onClick="openObjects"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Card1" />

    <ImageButton
        android:id="@+id/MonetaryBtn"
        android:layout_width="217dp"
        android:layout_height="55dp"
        android:background="@drawable/monetarybtn"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ObjectBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>